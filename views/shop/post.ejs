<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/post" method="POST">
            <div class="form-control">
                <div class="form__heading">
                    <h1>Write your complaints & Suggestions</h1>
                </div>
                <div class="tag">
                    <label for="tag">Complaint</label>
                <input type="radio" name="tag" id="tag" value="Complaint:">
                </div>
                <div class="tag">
                    <label for="tag">Suggestion</label>
                <input type="radio" name="tag" id="tag" value="Suggestion:">
                </div>
            </div>
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" value="">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="10"></textarea>
            </div>

            <button class="btn" type="submit">Post</button>
        </form>
    </main>
    <%- include('../includes/end.ejs') %>
